<%= form_for @comment, :url=> post_path(@comment.post) do |f| %>

  <div class="form-group">
    <%= f.text_area :content, :class => 'form-control', rows: 3 %>
    <%= f.hidden_field :post_id, value: @comment.post_id %>
  </div>
  <%= f.submit "Post", :url=> post_path(@comment.post), :class => 'btn btn-primary' %>

<% end %>
